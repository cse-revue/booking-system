<div class="container">
<h1>Create Production</h1>

<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
<%= form_for :production  do |f| %>
  <div class="form-group">
    <%= f.label :pretitle %>
    <%= f.text_field :pretitle, class: 'form-control', placeholder: 'CSE Revue 2012:' %>
    <span class="help-block">Comes before the title of the show. Usually the society name and year.</span>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: 'Codebusters' %>
    <span class="help-block">Title of show without society name or year.</span>
  </div>
  <div class="form-group">
    <%= f.label :webname %>
    <%= f.text_field :webname, class: 'form-control', placeholder: 'codebusters' %>
    <span class="help-block">Unique identifier that will go in the url of all the page for this show. No puncuation except dash and underscore.</span>
  </div>
  <div class="form-group">
    <%= f.label :contact_email, 'Contact Email' %>
    <%= f.text_field :contact_email, class: 'form-control', placeholder: 'foh.head@cserevue.org.au' %>
    <span class="help-block">Email will appear on the public site, inviting people to email if they have enquiries or need group bookings.</span>
  </div>
  <div class="form-group">
    <%= f.label :ticket_cc_email, 'Ticket CC Email' %>
    <%= f.text_field :ticket_cc_email, class: 'form-control', placeholder: 'webmin.head@cserevue.org.au' %>
    <span class="help-block">Every email sent by this site will bcc this address. Make it someone who can identify and fix problems.</span>
  </div>
  <div class="form-group">
    <%= f.label :theatre_id, 'Theatre' %>
    <%= f.select :theatre_id, Theatre.all.map {|t| [t.name, t.id]}, {}, class: 'form-control' %>
  </div>

  <div class="form-group" style="text-align:center">
    <%= f.submit "Create Production", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
</div>
</div>
</div>
